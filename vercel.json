{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 1 * * 1"
    }
  ],
  "env": {
    "APP_ID": "@app_id",
    "APP_SECRET": "@app_secret",
    "WEBHOOK_URL": "@webhook_url",
    "USER_IDS": "@user_ids"
  }
}