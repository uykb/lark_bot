run = "npm start"
entrypoint = "index.js"

[env]
NODE_ENV = "production"
USE_TEST_DATA = "false"  # 修改为false，关闭测试数据
LOG_LEVEL = "debug"      # 保持debug级别以便查看详细日志
SHOW_DETAILED_LOGS = "true"

[nix]
channel = "stable-22_11"

[packager]
language = "nodejs"
  [packager.features]
  packageSearch = true
  guessImports = true
  enabledForHosting = false

[languages.js]
pattern = "**/*.js"
syntax = "javascript"

[languages.js.languageServer]
start = [ "typescript-language-server", "--stdio" ]