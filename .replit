run = "npm start"
language = "nodejs"
entrypoint = "index.js"

[env]
NODE_ENV = "production"

[nix]
channel = "stable-22_11"

[packager]
language = "nodejs"
  [packager.features]
  packageSearch = true
  guessImports = true
  enabledForHosting = true

[unitTest]
language = "nodejs"

[languages]
  [languages.javascript]
  pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"
    [languages.javascript.languageServer]
    start = "typescript-language-server --stdio"

[cron]
enabled = true
schedule = "0 1 * * 1"  # 每周一上午9:00（北京时间，对应UTC+8，即UTC时间1:00）

[deployment]
run = ["sh", "-c", "npm start"]
deploymentTarget = "cloudrun"
ignorePorts = false